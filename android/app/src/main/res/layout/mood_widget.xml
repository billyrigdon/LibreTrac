<?xml version="1.0" encoding="utf-8"?>
<!-- Card-style container; HomeWidget pushes a bitmap into @id/widget_image -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mood_widget_bg"
    android:padding="2dp">                    <!-- 8 dp inset so nothing clips -->

    <ImageView
        android:id="@+id/widget_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:contentDescription="@string/mood_widget_content_desc"/>
</FrameLayout>
